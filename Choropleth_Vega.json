{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",

  "data": [
    	{
      "name": "statescode",
      "url": "https://raw.githubusercontent.com/keyurhansoti/Choropleth/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"},
			"type": "aggregate",
			"groupby": ["State_Code"],"fields": ["Amount"],"as": ["Amount"]
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/keyurhansoti/Choropleth/master/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        { "type": "geopath", "projection": "projection" },
        { "type": "lookup", "from": "statescode", "key": "State_Code",
      "fields": ["State_Code"], "values": ["Amount"]}
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain":{"data":"statescode","field":"Amount"},
      "range": {"scheme": "blue", "count": 7}
    }
  ],

  "legends": [
    {
      "fill": "color",
      "orient": "bottom-right",
      "title": "Indemnities",
      "format": "0.1%"
    }
  ],
  "marks": [
  {
    "type": "path",
    "from": {"data": "states"},
    "encode": {
      "enter": {
        "fill": {"value": "#0000FF"},
        "stroke": {"value": "white"}
      },
      "update": {
        "path": {"field": "path"}
      }
    }
  }
]
}